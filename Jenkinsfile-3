pipeline {
  agent {
    docker { image 'liquibase/liquibase:4.4.2' }
  }
 
  stages {
    stage('Status') {
      steps {
        sh 'liquibase status --url="jdbc:mysql://localhost:3306/sys?useSSL=false&allowPublicKeyRetrieval=true" --changeLogFile=my_app-wrapper.xml --username=root --password=root'
      }
    }
  }
  post {
    always {
      cleanWs()
    }
  }
}
